<h1><%= @task.title %></h1>
<p><%= link_to "Edit the task", edit_task_path %></p>
<p><%= @task.details %></p>
<p>
<% if @task.completed %>
    <i class="far fa-check-square"></i> This task is completed
  <% else %>
    <i class="far fa-square"></i> This task is not completed
  <% end %>
</p>
<br>
<p><%= link_to "Back to list", tasks_path %></p>
