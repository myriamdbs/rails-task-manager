<%= simple_form_for(@task) do |f| %>
  <%= f.input :title %>
  <%= f.input :details %>
  <% if !@task.new_record? %>
    <%= f.input :completed %>
    <%= f.submit "Edit Task", class: "btn btn-primary"%>
  <% else %>
    <%= f.submit "Create Task", class: "btn btn-primary"%>
  <% end %>

<% end %>
<hr>
